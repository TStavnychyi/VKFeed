<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDefaultWhite"
                android:id="@+id/attachment_audio"
                android:clipToPadding="false">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:layout_height="54dp"
        card_view:cardCornerRadius="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/iv_attachment_image_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_audiotrack_black_36dp"
                android:tint="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_attachment_image_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_audio_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textColor="@android:color/primary_text_light"
                    android:lines="1"
                    android:layout_toLeftOf="@+id/tv_audio_duration"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/tv_audio_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:textSize="12sp"
                    android:lines="1"
                    android:layout_below="@+id/tv_audio_name"
                    android:layout_toLeftOf="@+id/tv_audio_duration"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tv_audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:text="4:05"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>