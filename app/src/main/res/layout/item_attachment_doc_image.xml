<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attachment_doc_image"
                android:background="@color/colorDefaultWhite">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/card_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="224dp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="4dp"
                                        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_attachment_image"
                android:layout_width="match_parent"
                android:layout_height="152dp"

                android:layout_below="@+id/rv_video"
                android:scaleType="centerCrop"
                android:src="@color/colorAccent" />


            <RelativeLayout
                android:id="@+id/rv_video"
                android:layout_width="match_parent"

                android:layout_height="48dp"
                android:layout_gravity="top"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_attachment_image_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_insert_drive_file_black_36dp"
                    android:tint="@color/colorAccent" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/iv_attachment_image_icon">

                    <TextView
                        android:id="@+id/tv_attachment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"

                        android:maxLines="2"
                        android:text="New Text"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12sp" />


                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:background="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/tv_attachment_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="9.0 MB"
                    android:textSize="12sp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>




                <TextView
                    android:id="@+id/tv_attachment_ext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:textSize="12sp"
                    tools:text=".gif" />


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>